<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgItemRestaurant"
        android:layout_width="60dp"
        android:layout_height="60dp">
    </ImageView>

    <TextView
        android:id="@+id/txtItemtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imgItemRestaurant"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/imgItemRestaurant"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtItemDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgItemRestaurant"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@id/imgItemRestaurant"
        android:text="Descripcion" />

</RelativeLayout>